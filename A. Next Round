#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,k,i,c=0;
    cin>>n >>k;
    int a[1000];
    for(i=0;i<n;i++)
    {
        cin>>a[i];
    }
    int s=a[k-1];
    for(i=0;i<n;i++)
    {
        if(a[i]>=s&&a[i]>0)
        {
            c++;
        }
    }
    cout<<c<<endl;


}
