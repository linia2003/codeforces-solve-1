#include<bits/stdc++.h>
using namespace std;
int main(){
    long long n,i,j,c,a[10000];
    cin>>n;
        for(i=0;i<n;i++)
        {
            cin>>a[i];
        }
        sort(a,a+n);
        c=0;
        for(i=0;i<n;i++){
			for(j=i+1;j<n;j++){
				if(a[i]==a[j]){
					a[j]++;
					c++;
				}
			}
        }
        cout<<c<<endl;
}
