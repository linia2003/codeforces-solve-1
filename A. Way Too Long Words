#include<iostream>
using namespace std;
int main()
{
    int n,i;
    cin>>n;
    string m;
    for(i=0;i<n;i++)
    {
        cin>>m;
        if(m.length()>10)
        {
            cout<<m[0]<<m.length()-2<<m[m.length()-1]<<endl;
        }
        else
        {
            cout<<m<<endl;
        }
    }

}
